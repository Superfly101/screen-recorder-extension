{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "version": "1.0.1",
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {},
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "css": ["dist/output.css"],
      "js": ["scripts/content.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/pause.png",
        "assets/stop.png",
        "assets/camera.png",
        "assets/mic.png",
        "assets/trash-icon.png"
      ],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "description": "Record your full screen or current tab",
  "homepage_url": "https://path/to/homepage"
}
