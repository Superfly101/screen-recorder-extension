{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "version": "1.0.1",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/logo.png"
  },
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "images/pause.png",
        "images/stop.png",
        "images/camera.png",
        "images/mic.png",
        "images/trash-icon.png",
        "images/play-icon.svg",
        "dist/output.css"
      ],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "description": "Record your full screen or current tab",
  "homepage_url": "https://help-me-out-olive.vercel.app/"
}
